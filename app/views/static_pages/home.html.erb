          subdomains: ['otile1','otile2','otile3','otile4']
      }).addTo( map );
      map.on('click', function(e) {
        var radius = 500;
          L.circle(e.latlng, radius).addTo(map);
          $('#latlng').val(e.latlng);
          $('#radius').val(radius);
      });

