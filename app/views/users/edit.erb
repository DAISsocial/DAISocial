<div id="wrapper">

  <%= render 'layouts/navbar' %>

  <div id="page-wrapper" style="height: 100vh;">

    <div class="container-fluid row">

        <h1>Edit user</h1>
        <div class="row">
          <div class="form-box col-md-4  col-md-offset-3 ">
                <%= form_for @user  do |f|%>
                    <%= render 'fields',f: f %>
                    <div class="form-group">
                      <div class="col-md-4">
                        <%= f.submit "Edit", class: "btn btn-primary" %>
                      </div>
                    </div>
                <% end %>
          </div>
        </div>
    </div>
  </div>
</div>