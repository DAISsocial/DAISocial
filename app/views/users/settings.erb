<div id="wrapper">

  <%= render 'layouts/navbar' %>

  <div id="page-wrapper" style="height: 100vh;">

    <div class="container-fluid row">

      <div class="col-md-4 col-md-offset-1" style="border-right: 1px solid black;">
        <button class=" btn btn-info btn-large btoggle ">SELECT TOOLS</button>
        <div class="tables-toggle" style="display:none;">
          <%= form_tag(add_url) do  %>

                <% @tools.each do |t| %>

                    <%= check_box_tag('user[tool_ids][]',t.id )%>
                    <%= label_tag('user[tool_ids][]',t.name)%>
                    <br />

                <% end %>

              <%= submit_tag "Select",class: 'btn btn-default' %>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>