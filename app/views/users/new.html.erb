<body class="user">
<div class="row">
  <div class="form-box col-md-4  col-md-offset-3 ">
    <%= form_for(@user,class:"form-horizontal") do |f|  %>
        <%= render 'fields',f: f %>
        <div class="form-group">
            <div class="col-md-4">
                <%= f.submit "Create", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
  </div>
</div>
</body>