<div id="wrapper">

  <%= render 'layouts/navbar' %>

  <div id="page-wrapper" style="height: 100vh;">

    <div class="container-fluid row">
      <div class="col-md-4 col-md-offset-1 ">
        <%= link_to "Our rss", '/feed',class:"btn btn-primary" %>
          <%= form_for :review, remote: true do |f| %>
              <div class="form-group">
                <%= f.label :text %>
                <%= f.text_field :text,class: "form-control",placeholder: "Review text" %>
              </div>
              <div class="form-group">
                <%= f.submit "Create",class: "btn btn-primary" %>
              </div>
          <% end %>
        <div class="reviews-block">

        </div>
      </div>
      <div class="col-md-4 col-md-offset-2">
        <%= will_paginate @reviews %>
            <ul>
              <%= @reviews.each do |review| %>
              <li>
                <%= review.text %>
                <%= link_to 'delete review',review,method: 'delete' %>
              </li>
              <% end %>
            </ul>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>