<div id="wrapper">

  <%= render 'layouts/navbar' %>

  <div id="page-wrapper" style="height: 100vh;">
    <div class="container-fluid">

      <!-- Page Heading -->
      <div class="row">
        <div class="container">
          <h1>Twitter overview</h1><br/>
          <h4><%= t('description.twitter') %></h4>
          <div class="col-md-9 main-block" style="background-color: #D3D3D3;">
            <div class="row">
              <div class="col-md-7">
                <div class="embed-responsive embed-responsive-16by9">
                  <div class="embed-responsive-item" id="map" ></div>
                </div>
              </div>
              <div class="col-md-4 col-md-offset-1 form-block">
                <%= form_tag( search_twitter_url, remote: true, role:"form") do  %>
                    <div class="form-group">
                      <%= label_tag "Current location" %>
                      <%= text_field_tag :location,"", class:"form-control city",placeholder:"Location" %>
                    </div>
                    <div class="form-group">
                      <%= label_tag :hashtag %>
                      <%= text_field_tag :hashtag,"", class: "form-control", placeholder: "Hashtags", required: true %>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn ladda-button" data-style="zoom-out" name="submit">
                        <span class="ladda-label">Submit</span>
                        <span class="ladda-spinner"></span>
                      </button>
                    </div>
                <% end %>
              </div>
            </div>
          </div>
          <div id="myModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">

              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>